@inject IPasswordAuthService PasswordAuthService
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer

@if (ShowDialog)
{
    <div class="password-dialog-overlay">
        <div class="password-dialog">
            <h3>Enter Password</h3>
            <div class="password-input-group">
                <input type="password" 
                       class="form-control @(HasError ? "is-invalid" : "")" 
                       @bind="Password" 
                       @bind:event="oninput"
                       @onkeypress="HandleKeyPress"
                       placeholder="Enter password"
                       autofocus />
                @if (HasError)
                {
                    <div class="invalid-feedback">Incorrect password. Please try again.</div>
                }
            </div>
            <div class="password-dialog-actions">
                <button class="btn btn-primary" @onclick="ValidatePassword" disabled="@string.IsNullOrWhiteSpace(Password)">
                    Submit
                </button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public EventCallback<bool> OnAuthenticated { get; set; }
    
    private bool ShowDialog { get; set; } = true;
    private string Password { get; set; } = string.Empty;
    private bool HasError { get; set; } = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Check if user is already authenticated in this session
            var authValue = await JSRuntime.InvokeAsync<string>("sessionStorage.getItem", "appAuthenticated");
            if (authValue == "true")
            {
                ShowDialog = false;
                await OnAuthenticated.InvokeAsync(true);
                StateHasChanged();
            }
        }
    }

    private async Task ValidatePassword()
    {
        if (string.IsNullOrWhiteSpace(Password))
            return;

        HasError = false;
        
        var isValid = PasswordAuthService.ValidatePassword(Password);
        
        if (isValid)
        {
            // Store authentication state in sessionStorage
            await JSRuntime.InvokeVoidAsync("sessionStorage.setItem", "appAuthenticated", "true");
            ShowDialog = false;
            await OnAuthenticated.InvokeAsync(true);
            StateHasChanged();
        }
        else
        {
            HasError = true;
            Password = string.Empty;
            StateHasChanged();
        }
    }

    private async Task HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !string.IsNullOrWhiteSpace(Password))
        {
            await ValidatePassword();
        }
    }
}

